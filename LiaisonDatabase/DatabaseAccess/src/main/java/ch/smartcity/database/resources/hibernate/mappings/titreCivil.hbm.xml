<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping catalog="smartcity" package="database.models">
    <class name="TitreCivil" dynamic-update="true">
        <id name="idTitreCivil" type="integer">
            <generator class="native"/>
        </id>
        <property name="titre" not-null="true"/>
        <property name="abreviation" not-null="true"/>
        <property name="derniereMiseAJour" not-null="true" generated="always"/>
        <set name="utilisateurSet" table="Utilisateur" inverse="true" lazy="true">
            <key column="idTitreCivil" not-null="true"/>
            <one-to-many class="Utilisateur"/>
        </set>
    </class>
    <query name="titreCivil.findByAbreviation">
        <![CDATA[from TitreCivil as tc where tc.abreviation = :abreviation]]>
    </query>
</hibernate-mapping>
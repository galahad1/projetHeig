<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping catalog="smartcity" package="database.models">
    <class name="Evenement" dynamic-update="true">
        <id name="idEvenement" type="integer">
            <generator class="native"/>
        </id>
        <many-to-one name="rubriqueEnfant"
                     column="idRubriqueEnfant"
                     class="RubriqueEnfant"
                     cascade="persist,merge,save-update"
                     not-null="true"/>
        <many-to-one name="utilisateur"
                     column="idUtilisateur"
                     class="Utilisateur"
                     cascade="persist,merge,save-update"
                     not-null="true"/>
        <property name="nomEvenement" not-null="true"/>
        <many-to-one name="adresse"
                     column="idAdresse"
                     class="Adresse"
                     cascade="persist,merge,save-update"/>
        <property name="latitude"/>
        <property name="longitude"/>
        <property name="debut" not-null="true"/>
        <property name="fin"/>
        <property name="details"/>
        <many-to-one name="priorite"
                     column="idPriorite"
                     class="Priorite"
                     cascade="persist,merge,save-update"
                     not-null="true"/>
        <many-to-one name="statut"
                     column="idStatut"
                     class="Statut"
                     cascade="persist,merge,save-update"
                     not-null="true"/>
        <property name="creation" not-null="true" generated="always"/>
        <property name="derniereMiseAJour" not-null="true" generated="always"/>
        <set name="commentaireSet" table="Commentaire" inverse="true" lazy="true">
            <key column="idEvenement" not-null="true"/>
            <one-to-many class="Commentaire"/>
        </set>
    </class>
    <query name="evenement.findByNomEvenement">
        <![CDATA[from Evenement as eve where eve.nomEvenement = :nomEvenement]]>
    </query>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping catalog="smartcity" package="database.models">
    <class name="Npa" dynamic-update="true">
        <id name="idNpa" type="integer">
            <generator class="native"/>
        </id>
        <property name="numeroNpa" not-null="true"/>
        <property name="derniereMiseAJour" not-null="true" generated="always"/>
        <set name="adressesSet" table="Adresse" inverse="true" lazy="true">
            <key column="idNpa" not-null="true"/>
            <one-to-many class="Adresse"/>
        </set>
    </class>
    <query name="npa.findByNumeroNpa">
        <![CDATA[from Npa as npa where npa.numeroNpa = :numeroNpa]]>
    </query>
</hibernate-mapping>
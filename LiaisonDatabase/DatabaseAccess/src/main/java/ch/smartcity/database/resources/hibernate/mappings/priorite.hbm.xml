<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping catalog="smartcity" package="database.models">
    <class name="Priorite" dynamic-update="true">
        <id name="idPriorite" type="integer">
            <generator class="native"/>
        </id>
        <property name="nomPriorite" not-null="true"/>
        <property name="niveau" not-null="true"/>
        <property name="derniereMiseAJour" not-null="true" generated="always"/>
        <set name="evenementSet" table="Evenement" inverse="true" lazy="true">
            <key column="idPriorite" not-null="true"/>
            <one-to-many class="Evenement"/>
        </set>
    </class>
    <query name="priorite.findByNomPriorite">
        <![CDATA[from Priorite as pri where pri.nomPriorite = :nomPriorite]]>
    </query>
</hibernate-mapping>
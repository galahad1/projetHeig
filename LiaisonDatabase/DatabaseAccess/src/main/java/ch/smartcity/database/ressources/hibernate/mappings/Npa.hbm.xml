<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="models.Npa" table="Npa" catalog="smartcity">
        <id name="idNpa" type="int">
            <column name="idNpa" />
            <generator class="identity" />
        </id>
        <property name="numeroNpa" type="string">
            <column name="numeroNpa" />
        </property>
        <property name="derniereMiseAJour" type="calendar">
            <column name="derniereMiseAJour" />
        </property>
    </class>
    <query  name="Npa.findAll">
        <![CDATA[from Npa as npa]]>
    </query>
    <query  name="Npa.findByNumeroNpa">
        <![CDATA[from Npa as npa where npa.numeroNpa = :numeroNpa]]>
    </query>
</hibernate-mapping>
<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping catalog="smartcity" package="models">
    <class name="Npa" table="Npa" dynamic-update="true">
        <id name="idNpa" type="int">
            <column name="idNpa"/>
            <generator class="identity"/>
        </id>
        <property name="numeroNpa" column="numeroNpa" type="string"
                  not-null="true">
        </property>
        <property name="derniereMiseAJour" column="derniereMiseAJour"
                  type="calendar" not-null="true" generated="always">
        </property>
    </class>
    <query name="Npa.findByNumeroNpa">
        <![CDATA[from Npa as npa where npa.numeroNpa = :numeroNpa]]>
    </query>
    <query name="Npa.findAll">
        <![CDATA[from Npa as npa]]>
    </query>
</hibernate-mapping>
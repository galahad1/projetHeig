<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping catalog="smartcity" package="database.models">
    <class name="Statut" dynamic-update="true">
        <id name="idStatut" type="integer">
            <generator class="native"/>
        </id>
        <property name="nomStatut" not-null="true"/>
        <property name="derniereMiseAJour" not-null="true" generated="always"/>
        <set name="evenementSet" table="Evenement" inverse="true" lazy="true">
            <key column="idStatut" not-null="true"/>
            <one-to-many class="Evenement"/>
        </set>
    </class>
    <query name="statut.findByNomStatut">
        <![CDATA[from Statut as sta where sta.nomStatut = :nomStatut]]>
    </query>
</hibernate-mapping>
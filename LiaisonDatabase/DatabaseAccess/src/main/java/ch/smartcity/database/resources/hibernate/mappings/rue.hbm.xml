<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping catalog="smartcity" package="database.models">
    <class name="Rue" dynamic-update="true">
        <id name="idRue">
            <generator class="native"/>
        </id>
        <property name="nomRue" not-null="true"/>
        <property name="derniereMiseAJour" not-null="true" generated="always"/>
        <set name="adresseSet" table="Adresse" inverse="true" lazy="true">
            <key column="idRue" not-null="true"/>
            <one-to-many class="Adresse"/>
        </set>
    </class>
    <query name="rue.findByNomRue">
        <![CDATA[from Rue as rue where rue.nomRue = :nomRue]]>
    </query>
</hibernate-mapping>